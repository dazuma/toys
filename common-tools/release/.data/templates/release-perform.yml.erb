name: Force release

on:
  workflow_dispatch:
    inputs:
      name:
        description: Unit to release
        required: true
      version:
        description: Version to release
        required: true
      flags:
        description: Extra flags to pass to the release script
        required: false
        default: ""

jobs:
  release-perform:
    if: ${{ github.repository == '<%= @settings.repo_path %>' }}
    env:
      ruby_version: "3.3"
    runs-on: ubuntu-latest
    steps:
      - name: Install Ruby ${{ env.ruby_version }}
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: ${{ env.ruby_version }}
      - name: Checkout repo
        uses: actions/checkout@v4
      - name: Install Toys
        run: "gem install --no-document toys"
      - name: Perform release
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          GEM_HOST_API_KEY: ${{ secrets.RUBYGEMS_API_KEY }}
        run: |
          toys release perform --yes --verbose \
            "--enable-releases=${{ secrets.ENABLE_RELEASES }}" \
            "--release-ref=${{ github.sha }}" \
            ${{ github.event.inputs.flags }} \
            "${{ github.event.inputs.name }}" "${{ github.event.inputs.version }}" \
            < /dev/null
